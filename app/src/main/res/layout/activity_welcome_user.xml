<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeUser.WelcomeUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/welcome_user_background"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/welcome_user_info_background"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <GridLayout
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_height="0dp">

            <!-- MANAGE RPOFILE -->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/manager_profile_cardView"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/manager_user_profile"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--View CARS-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/viewcars"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/manager_user_profile"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/manager_user_profile"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/manager_user_profile"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_columnWeight="1"
                android:layout_height="0dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/manager_user_profile"
                        />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:padding="10dp"
                        android:text="MANAGE PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/user_navigation_view"
        android:layout_width="wrap_content"
        app:itemIconTint="@color/colorWhite"
        android:background="@color/colorBlack"
        app:itemTextColor="@color/colorWhite"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        android:layout_height="match_parent">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>